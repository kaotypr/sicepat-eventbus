{
  "name": "sicepat-eventbus",
  "version": "0.0.0",
  "description": "Type-safe event bus for iframe communication",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    },
    "./hooks": {
      "import": "./dist/hooks.mjs",
      "types": "./dist/hooks.d.ts",
      "require": "./dist/hooks.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "rm -rf dist && tsup",
    "dev": "rm -rf dist && tsup --config tsup.dev.config.ts",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --apply .",
    "prepare": "npm run build && lefthook install",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "keywords": ["eventbus", "iframe", "communication", "react"],
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/react": ">=16.8.0",
    "lefthook": "^1.10.10",
    "standard-version": "^9.5.0",
    "tsup": "^8.0.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "railframe": "^0.0.3"
  }
}
